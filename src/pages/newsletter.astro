---
import { SITE } from "@/consts"
import SEO from "@/components/seo/SEO.astro"
import Layout from "@/layouts/Layout.astro"
import Root from "@/layouts/Root.astro"
import { NewsletterForm } from "@/components/newsletter/form"
import ComeBack from "@/components/ComeBack.astro"
---

<Root>
  <SEO slot="meta" title="Newsletter" robots="none" image={SITE.IMAGE} />
  <Layout class="flex flex-col">
    <aside class="mt-20">
      <ComeBack />
    </aside>
    <section class="flex items-center flex-1 mb-40">
      <div class="w-full max-w-md mx-auto">
        <h1 class="text-2xl md:text-3xl font-semibold">
          <span class="text-foreground/80">Suscríbete a mi</span>
          <span>newsletter</span>,
        </h1>
        <p class="text-muted-foreground md:text-lg">
          si quieres estar atento a mis futuros artículos.
        </p>
        <div class="mt-6">
          <NewsletterForm client:load />
        </div>
      </div>
    </section>
  </Layout>
</Root>
