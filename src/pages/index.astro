---
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import Root from '@/layouts/Root.astro'
import Articles from '@/components/Articles.astro'
import SEO from '@/components/seo/SEO.astro'
import HomeSEO from '@/components/seo/HomeSEO.astro'
---

<Root>
	<SEO
		slot="meta"
		title="Imangelo Blog"
		description="Un blog sobre software, ciencia y demÃ¡s..."
		image={SITE.IMAGE}
	/>
	<HomeSEO slot="meta" />
	<Layout class="pt-24 md:pt-32 mb-20 max-w-screen-md">
		<header>
			<section
				class="flex flex-col sm:flex-row sm:items-center justify-between flex-wrap gap-y-6"
			>
				<div class="flex-1">
					<h1 class="grid gap-y-1 md:text-wrap text-foreground/70">
						<span class="text-3xl">
							Soy <span class="text-foreground">Michelangelo</span>,
						</span>
						<span class="leading-snug max-w-80"
							>un desarrollador web que a veces escribe sobre software o
							ciencia.</span
						>
					</h1>
				</div>
			</section>
		</header>
		<Articles />
	</Layout>
</Root>
