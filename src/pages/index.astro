---
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import Root from '@/layouts/Root.astro'
import Articles from '@/components/Articles.astro'
import SEO from '@/components/seo/SEO.astro'
import HomeSEO from '@/components/seo/HomeSEO.astro'
---

<Root>
  <SEO
    slot="meta"
    title="Imangelo Blog"
    description="Un blog sobre software, ciencia y demás..."
    image={SITE.IMAGE}
  />
  <HomeSEO slot="meta" />
  <Layout class="pt-24 md:pt-40 mb-32 md:mb-40 max-w-screen-sm">
    <header>
      <section
        class="flex flex-col sm:flex-row sm:items-center justify-between flex-wrap gap-y-6"
      >
        <div class="flex-1">
          <h1
            class="flex flex-col gap-y-2 justify-center items-center text-foreground/70 text-center"
          >
            <span
              class="font-bold text-3xl md:text-4xl font-eva text-foreground"
              >Soy Michelangelo,</span
            >
            <span class="leading-snug max-w-80 font-thin font-mono"
              >desarrollador web que a veces escribe para sí mismo.</span
            >
          </h1>
        </div>
      </section>
    </header>
    <Articles />
  </Layout>
</Root>
