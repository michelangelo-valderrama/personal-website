---
import type { HTMLAttributes } from "astro/types"
interface Props extends HTMLAttributes<"a"> {
  external?: boolean
}
import { cn } from "@/lib/utils"

const { external = false } = Astro.props

function restExternal(external: boolean) {
  return external ? { target: "_blank", rel: "noopener noreferrer" } : {}
}
---

<a
  class={cn(
    "text-muted-foreground hover:text-accent-foreground inline-flex items-center transition text-sm md:text-base",
    Astro.props.class
  )}
  {...Astro.props}
  {...restExternal(external)}><slot /></a
>
