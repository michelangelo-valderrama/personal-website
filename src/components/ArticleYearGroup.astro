---
interface Props {
  year: string
}
---

<article class="flex flex-col border-t">
  <div class="flex">
    <div class="text-muted-foreground px-2 md:px-3 pt-3.5 text-sm">
      <time class="ml-auto" datetime={Astro.props.year}>{Astro.props.year}</time
      >
    </div>
    <div class="flex-1">
      <slot />
    </div>
  </div>
</article>
