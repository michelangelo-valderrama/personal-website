---
import { Rss } from "lucide"
import LucideIcon from "./LucideIcon.astro"
import GitHubIcon from "./ui/icons/GitHubIcon.astro"
import LogoIcon from "./ui/icons/LogoIcon.astro"
import FooterLink from "./FooterLink.astro"
---

<footer class="border-t border-t-border/60 mb-16">
  <div class="max-w-screen-sm mx-auto px-4 mt-6 flex items-center gap-x-2">
    <FooterLink
      href="https://github.com/michelangelo-valderrama"
      target="_blank"
      rel="noopener noreferrer"
    >
      <GitHubIcon class="size-5" />
      <span class="sr-only">GitHub</span>
    </FooterLink>
    <FooterLink href="/rss.xml" target="_blank" rel="noopener noreferrer">
      <LucideIcon class="size-5" icon={Rss} />
      <span class="sr-only">RSS</span>
    </FooterLink>
    <FooterLink href="/" class="ml-auto">
      <LogoIcon class="size-5" />
      <span class="sr-only">Home</span>
    </FooterLink>
  </div>
</footer>
