  {
    years.map((year) => (
      <ArticleYearGroup {year}>
        {articlesByYear[year].map(({ data: { title, date }, slug }) => (
          <ArticleLink {title} {date} {slug} />
        ))}
      </ArticleYearGroup>
    ))
  }
</Section>
