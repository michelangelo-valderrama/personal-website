---
import Footer from "@/components/Footer.astro"
import { Toaster } from "@/components/ui/toaster"
import { cn } from "@/lib/utils"
---

<main
  class={cn("max-w-screen-lg mx-auto px-4 min-h-svh size-full", Astro.props.class)}
  transition:animate="fade"
>
  <slot />
  <div
    class="hidden dark:block fixed bottom-0 left-0 w-full h-20 bg-gradient-to-t from-background to-transparent pointer-events-none select-none"
  >
  </div>
</main>
<Toaster client:load />
<Footer />
